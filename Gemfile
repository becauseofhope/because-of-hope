# Zurb Foundation
gem 'foundation-rails', '~> 5.2.1.0'

# jQuery
gem 'jquery-cdn'

# Compass
gem 'compass'
gem 'sass', '~> 3.2.19'

# Haml
gem 'haml'

# Optimization
gem 'uglifier'

# Markdown
