source 'https://rubygems.org'

# Dependencies for local Web server
gem 'adsf'
gem 'mime-types'
gem 'rack'

# Dependency for XML Sitemap generation
gem 'builder'

# nanoc
gem 'nanoc'

# Third party nanoc addons
gem 'nanoc-image-compressor'
gem 'nanoc-javascript-concatenator'

# Zurb Foundation
gem 'zurb-foundation', '~> 4.1.1'

# Compass
gem 'compass'
gem 'sass'

# Haml
gem 'haml'

# Deployment
gem 'fog'

# Optimization
gem 'uglifier'

# Markdown
gem 'redcarpet'

# Code hilighting
gem 'pygments.rb'

# Development
gem 'faker'
gem 'rake'
gem 'guard'
gem 'guard-nanoc', :git => 'https://github.com/nanoc/guard-nanoc.git'
gem 'terminal-notifier-guard'
gem 'rb-fsevent', '~> 0.9'

# String operations for post creation
gem 'stringex'
