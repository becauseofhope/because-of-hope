!!! 5
%html
  = render 'head'
  %body
    = render 'fbjsdk'
    = render 'header'
    .main
      - if @item[:header_img]
        .row
          .large-12.columns.banner
            %img{src:@item[:header_img]}
      - if @item[:sidebar] == false
        = yield
      - else
        .row
          .large-8.columns
            = yield
          .large-4.columns
            = render 'sidebar'
    = render 'footer'

    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"}

