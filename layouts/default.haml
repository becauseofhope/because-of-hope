%html{class: 'no-js', lang: 'en'}<>
  <!--<![endif]-->
  %head
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title= "BOH - #{item[:title]}"
    %link{href: '/assets/stylesheets/normalize.css', rel: 'stylesheet'}
    %link{href: '/assets/stylesheets/app.css', rel: 'stylesheet'}
    %script{src: '/assets/javascripts/respond.js'}
    %script{src: '/assets/javascripts/foundation/vendor-custom-modernizr.js'}
  %body
    = render 'fbjsdk'
    = render 'header'
    %article
      - if @item[:header_img]
        %header
          %img{src:@item[:header_img]}
      - if @item[:sidebar] == false
        .spread
          #content
            = yield
      - else
        .info
          #content
            = yield
          %aside
            = render 'sidebar'
    = render 'footer'
    :javascript
      document.write('<script src=' +
      ('__proto__' in {} ? '/assets/javascripts/foundation/vendor-zepto' : '/assets/javascripts/foundation/vendor-jquery') +
      '.js><\/script>')

    %script{src: '/assets/javascripts/foundation.js'}
    %script{src: '/assets/javascripts/moment.js'}
    %script{src: '/assets/javascripts/current_events.js'}
    %script $(document).foundation();





