!!! 5
%html
  = render 'head'
  %body
    = render 'fbjsdk'
    = render 'header'
    .main
      - if @item[:header_img]
        .row
          .large-12.columns.banner
            %img{src:@item[:header_img]}
      - if !@item[:sidebar]
        = yield
      - else
        .row
          .large-8.columns
            = yield
          .large-4.columns
            = render 'sidebar'
    = render 'footer'
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"}
    %script{:src => "/assets/javascripts/foundation/foundation.js"}
    - %w{alerts clearing cookie dropdown forms joyride magellan orbit placeholder reveal section tooltips topbar}.map do |js|
      %script{:src => "/assets/javascripts/foundation/foundation.#{js}.js"}




